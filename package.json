{
  "name": "file-storage",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/googlicius/file-storage.git"
  },
  "keywords": [
    "File storage Nodejs",
    "File system abastraction",
    "typescript"
  ],
  "scripts": {
    "lerna": "lerna",
    "new-version": "lerna version --conventional-commits",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "pub": "lerna publish",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "test:detectOpenHandles": "lerna run test:detectOpenHandles",
    "lint": "eslint --ext ts .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "typescript": "~4.3.5"
  },
  "jest": {
    "testTimeout": 150000,
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
